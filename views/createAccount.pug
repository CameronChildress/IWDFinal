extends layout 

block content 
    form(id='form' method="post" action="/createNew" + person.id)
        p Username 
            input(type="text" name="username")
        p Password 
            input(type="text" name="password")      
        p Confirm Password 
            input(type="text" name="confirm")    
        p Email  
            input(type="text" name="email")    
        p Age 
            input(type="text" name="age")    
        p Question 1 - What?
            select(name="questionOneAnswer")
                option(value="option1") uh
                option(value="option2") wha-
                option(value="option3") whuhhh
                option(value="option4") doo wahhhh
        p Question 2 - my...
            select(name="questionTwoAnswer")
                option(value="Human") Superhero
                option(value="Ghost") Ghost
                option(value="Goat") Goat
                option(value="Vampire") Vampire 
        p Question 3 - blah blah
            select(name="questionThreeAnswer")
                option(value="Human") Human
                option(value="Ghost") Ghost
                option(value="Goat") Goat
                option(value="Vampire") Vampire
        p 
            input(type="submit" value="Confirm")